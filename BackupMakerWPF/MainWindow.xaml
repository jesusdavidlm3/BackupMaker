<Window x:Class="BackupMakerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupMakerWPF"
        mc:Ignorable="d"
        Title="Backup Maker" Height="450" Width="800">
    
    <Window.Resources>
        <local:AvailableDrives x:Key="DrivesList"/>        
    </Window.Resources>
    
    <StackPanel HorizontalAlignment="Center">
        <TextBlock FontSize="50" HorizontalAlignment="Center">BackupMaker</TextBlock>
        <TextBlock FontSize="30" HorizontalAlignment="Center">By: Jesus Lozano</TextBlock>
        <StackPanel
            Margin="0 20 0 0"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Label>Disco de Origen: </Label>
            <ComboBox
                Margin="0 0 15 0"
                Name="Origin"
                ItemsSource="{StaticResource DrivesList}"
                DropDownOpened="HandleChange"
                DropDownClosed="VerifySelection"/>
            <Label>Disco de Destino: </Label>
            <ComboBox 
                Margin="0 0 15 0"
                Name="Destiny"
                ItemsSource="{StaticResource DrivesList}"
                DropDownOpened="HandleChange"
                DropDownClosed="VerifySelection"/>
        </StackPanel>
        <TextBlock Visibility="Collapsed" Name="NoSoErr">El disco detino no contiene un sistema operativo Windows</TextBlock>
        <TextBlock Visibility="Collapsed" Name="SameDiskErr">El disco de origen no puede ser el mismo que de destino</TextBlock>
        <Button
            Width="50"
            Margin="20"
            Name="StartButton"
            IsEnabled="False">Copiar</Button>
    </StackPanel>
</Window>
