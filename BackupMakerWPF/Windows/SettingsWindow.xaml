<Window x:Class="BackupMakerWPF.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BackupMakerWPF.Windows"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800" ResizeMode="CanMinimize">
    
    <Window.Resources>
        <local:ExcludedExtensions x:Key="ExcludedExtensions"/>
    </Window.Resources>
    
    <StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            Text="Ajustes"
            FontSize="20"/>
        <Border
            Width="800"
            BorderThickness="1"
            BorderBrush="Black"/>
        <TextBlock
            Text="Archivos Excluidos"
            FontSize="12"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource ExcludedExtensions}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding extension}" IsChecked="{Binding Path=excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
